#!/bin/sh

Filename='/science/irene/MethylationQTLProject/src/getSNPEffectSizesCpGScript.sh'
Ouptprefix='/science/irene/MethylationQTLProject/src/getSNPEffectSizesCpG'
Name='getSNPEffectSizesCpG'
Count=0

while read line;
do
	((Count=Count+1));
	Outfilename=$Ouptprefix$Count".sh";
	echo -e "$line" > $Outfilename;
	#command1="qsub -q high_memory -l nodes=1 -l mem=32G -w e -N $Name$Count -V -o ";
	command1="qsub -l nodes=1 -l mem=1G -w e -N $Name$Count -V -o ";
	command2="$Ouptprefix$Count.o -e ";
	command3="$Ouptprefix$Count.e ";
	command4=$Outfilename;
	$command1$command2$command3$command4;
	sleep .2;
done < $Filename
